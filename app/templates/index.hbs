<div class="row">
	<div class="col-lg-6 col-lg-offset-3">
		<div class="row">
			<h2><b>ToDos</b></h2>
		</div>
		<div class="row">
			<h4><b>Add new task</b></h4>
			<div class="row">
				<div class="col-xs-12">

					{{todo-form item=model task=newTask buttonLabel='add' action='addTodo'}}

				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-xs-12">
					<h4><b>To Dos</b></h4>
					<div id="todos">

						{{#each model as |todo|}}
							{{#todo-item item=todo}}
							{{/todo-item}}
						{{else}}
							<h4>No Tasks to do</h4>
						{{/each}}

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
